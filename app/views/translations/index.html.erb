<h1 class="page-header"> Listing translations</h1>

<table>
  <thead>
    <tr>
      <th> Input</th>
      <th> Output</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @translations.each do |translation| %>
      <tr>
        <td> <%= translation.input%> </td>
        <td> <%= translation.output%> </td>
        <td> <%= link_to 'Show', translation%> </td>
        <td> <%= link_to 'Edit', edit_translation_path(translation)%> </td>
        <td> <%= link_to 'Destroy', translation, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Translation', new_translation_path, class: 'btn btn-default' %>
